{
  "name": "learn-authoring-pack",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/vscode",
      "**/husky",
      "**/jest",
      "**/mocha",
      "**/@types",
      "**/@types/jest",
      "**/@types/mocha"
    ]
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1"
  },
  "scripts": {
    "preinstall": "node ./cleanup-prepush.js",
    "pre-push": "npm run lint && npm run compile"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"**/*.{ts,js,json,yml}\"",
      "pre-push": "npm run pre-push"
    }
  }
}
